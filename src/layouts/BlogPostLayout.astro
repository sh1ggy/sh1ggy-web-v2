---
const { frontmatter } = Astro.props;
import Tags from "../components/Blog/Tags";
---

<!DOCTYPE html>
<html
  class="p-10 scrollbar-thin scrollbar-track-card scrollbar-thumb-container scrollbar-thumb-rounded-lg"
>
  <!-- ... -->
  <div class="space-y-3">
    <div class="flex flex-col space-y-3">
      <div class="flex flex-col rounded-lg bg-container p-3">
        <h1 class="text-primary text-4xl font-ubuntu">{frontmatter.title}</h1>
        <p class="italic">{frontmatter.description}</p>
        <Tags tags={frontmatter.tags} />
        <a class="text-link" href={frontmatter.repo}>GitHub Repo</a>
        <code class="bg-container rounded-lg">{frontmatter.date}</code>
      </div>
    </div>
    <!-- Markdown content is injected here -->
    <slot />
  </div>
  <style is:global>
    h2 {
      color: red;
      font-size: 2.5em;
      font-weight: 200;
    }
    h3 {
      font-size: large;
    }
  </style>


</html>
